<!-- welcome -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/welcome" >

    <!-- Rectangle gris -->
    <View
    android:id="@+id/rectangle_1"
    android:layout_width="252dp"
    android:layout_height="40dp"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="77dp"
    android:layout_alignParentTop="true"
    android:layout_marginTop="527dp"
    android:background="@drawable/rectangle_gris" />

    <!-- Iniciar sesión -->
    <TextView
        android:id="@+id/iniciar_ses"
        android:layout_width="99dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="537dp"
        android:gravity="top"
        android:text="@string/iniciar_sesion"
        android:textAppearance="@style/iniciar_sesion" />

    <!-- Bienvenido a My pCloud -->

    <!-- Mantén a salvo tus archivos en la nube. -->
    <TextView
        android:id="@+id/bienvenido_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="52dp"
        android:gravity="top"
        android:text="@string/bienvenido"
        android:textAppearance="@style/titulo" />

    <!-- Imagen pcloud bienvenida -->
    <TextView
        android:id="@+id/mant_n_a_sa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="95dp"
        android:gravity="top"
        android:text="@string/manten_salvo"
        android:textAppearance="@style/subtitulo" />

    <View
        android:id="@+id/login_pclou"
        android:layout_width="274dp"
        android:layout_height="296dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="66dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="171dp"
        android:background="@drawable/login_pcloud_1"
        />

    <!-- ¿No tienes una cuenta? Regístrate -->
    <TextView
        android:id="@+id/no_tienes_u"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="605dp"
        android:gravity="top"
        android:text="@string/registrate"
        android:textAppearance="@style/texto_normal" />

    </RelativeLayout>
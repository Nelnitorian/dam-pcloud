<?xml version="1.0" encoding="utf-8"?>
<!-- lost password -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true">

    <!-- Recuperar contraseña -->
    <TextView
        android:id="@+id/inicio_de_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="70dp"
        android:gravity="top"
        android:text="@string/recuperar"
        android:textAppearance="@style/titulo" />

    <!-- Introduce tu correo electrónico para recuperar contraseña -->
    <TextView
        android:id="@+id/introduce_c"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="165dp"
        android:gravity="top"
        android:text="@string/texto_correo"
        android:textAppearance="@style/subtitulo" />

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="71dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="226dp"
        android:background="@drawable/rectangle_2"
        />
    <!-- Email -->
    <TextView
        android:id="@+id/email"
        android:layout_width="41dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="89dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="237dp"
        android:text="@string/email"
        android:textAppearance="@style/email"
        android:gravity="top"
        />

    <!-- Rectangle azul -->

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="331dp"
        android:background="@drawable/rectangle_azul" />

    <TextView
        android:id="@+id/iniciar_ses"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="129dp"
        android:layout_marginTop="338dp"
        android:gravity="top"
        android:text="@string/recuperar"
        android:textAppearance="@style/iniciar_sesion" />

    <!-- Rectangle 4 -->
    <View
        android:id="@+id/rectangle_4"
        android:layout_width="310dp"
        android:layout_height="176dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="131dp"
        android:background="@drawable/rectangle_4" />
</RelativeLayout>
